// Place your settings in this file to overwrite the default settings
{
  "editor.fontFamily": "Hack",
  "window.titleBarStyle": "custom",

  "editor.wordWrap": "on",
  "editor.fontSize": 14,
  "editor.tabSize": 2,
  "editor.rulers": [80, 100],
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,

  "terminal.integrated.shell.windows": "C:\\Windows\\Sysnative\\WindowsPowerShell\\v1.0\\powershell.exe",
  "window.menuBarVisibility": "toggle",

  "editor.minimap.enabled": false,

  "powershell.integratedConsole.showOnStartup": false,
  "workbench.activityBar.visible": true,
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "app/**/*.js.map": true,
    "app/**/*.js": true
  },

  "workbench.sideBar.location": "left",
  "workbench.startupEditor": "newUntitledFile",
  "editor.acceptSuggestionOnEnter": "off",

  "files.associations":{
    "*.icml": "xsl",
    "*.fo": "xsl"
  },

  "[plaintext]": {
    "editor.quickSuggestions": {
      "other": false,
      "comments": false,
      "strings": false
    }
  },

  "[git-commit]": {
    "editor.quickSuggestions": {
      "other": false,
      "comments": false,
      "strings": false
    }
  },
  "vim.useSystemClipboard": true,
  "java.errors.incompleteClasspath.severity": "ignore",

  // colors
  "workbench.colorCustomizations": {
    "foreground": "#e87e7c",
    "editor.background": "#101010",
    "editorGutter.background": "#000000",
    "editor.foreground": "#e87e7c",
    "editorCursor.foreground": "#BBBBBB",
    "editor.lineHighlightBackground": "#000000",
    "statusBar.background": "#000000",
    "tab.inactiveBackground": "#000000",
    "tab.activeForeground": "#e87e7c",
    "sideBar.background": "#000000",
    "panel.background": "#000000",
    "activityBar.background": "#000000",
    "statusBar.noFolderBackground": "#000000",
    "editorLineNumber.activeForeground": "#e87e7c",
    "editor.selectionBackground": "#555555",
    "editor.selectionForeground": "#1f1f1f",
    "editor.selectionHighlightBackground": "#000000",
    "editor.selectionHighlightBorder": "#ffffff",
    "editorBracketMatch.border": "#ffffff",
    "editorGroupHeader.tabsBackground": "#000000",
    "diffEditor.insertedTextBackground": "#294436",
    "diffEditor.removedTextBackground": "#301b1b",
    "editorGutter.addedBackground": "#447152",
    "editorGutter.modifiedBackground": "#43698d",
    "editorGutter.deletedBackground": "#5b1b1b",
    "gitDecoration.addedResourceForeground": "#447152",
    "gitDecoration.modifiedResourceForeground": "#43698d",
    "gitDecoration.conflictingResourceForeground": "#b1a400",
    "gitDecoration.deletedResourceForeground": "#5b1b1b",
    "gitDecoration.ignoredResourceForeground": "#808080",
    "gitDecoration.untrackedResourceForeground": "#d60010"
  },
  "editor.tokenColorCustomizations": {
    "keywords": "#bb83d1",
    "functions": "#d60010",
    "variables": "#e87e7c",
    "comments": "#808080",
    "types": "#f39745",
    "numbers": "#6fdbb2",
    "strings": "#6fdbb2",
    "textMateRules": [
      {
        "name": "raw/default source",
        "scope": [
          "source",
          "text",
        ],
        "settings": {
          "foreground": "#e87e7c",
        }
      },
      {
        "name": "keywords",
        "scope": [
          "storage.modifier",
          "keyword.operator.new",
          "keyword.other",
          "variable.language.this",
        ],
        "settings": {
          "foreground": "#bb83d1",
        }
      },
      {
        "name": "types",
        "scope": [
          "entity.name",
          "entity.name.tag.html",
          "entity.other.inherited-class",
          "storage.type",
          "storage.modifier.import",
          "storage.modifier.package",
          "constant.other.table-name.sql",
          "constant.other.database-name.sql",
        ],
        "settings": {
          "foreground": "#f39745",
          "fontStyle": "italic",
        }
      },
      {
        "name": "punctuation and operators",
        "scope": [
          "keyword.operator",
          "punctuation",
          "keyword.control.ternary",
          "constant.character.escape",
          "storage.type.function.arrow",
          "meta.brace.round",
          "meta.brace.square",
          "meta.brace.angle",
          "punctuation.definition.template-expression.begin",
          "punctuation.definition.template-expression.end",
          "punctuation.definition.tag.begin.html",
          "punctuation.definition.tag.end.html",
        ],
        "settings": {
          "foreground": "#ffffff",
        }
      },
      {
        "name": "comments",
        "scope": [
          "comment",
          "comment.line.number-sign.git-commit",
        ],
        "settings": {
          "foreground": "#808080",
          "fontStyle": "italic",
        }
      },
      {
        "name": "functions and methods",
        "scope": [
          "meta.method.declaration",
        ],
        "settings": {
          "foreground": "#d60010",
        }
      },
      {
        "name": "variables",
        "scope": [
          "variable",
          "variable.parameter",
          "entity.other.attribute-name",
          "constant.other.key",
          "support.variable.property",
          "support.type.property-name.json",
          "meta.object-literal.key",
        ],
        "settings": {
          "foreground": "#e87e7c",
        }
      },
      {
        "name": "primitives",
        "scope": [
          "storage.type.primitive",
          "constant.language",
        ],
        "settings": {
          "foreground": "#bb83d1",
        }
      },
      {
        "name": "warnings",
        "scope": [
          "invalid",
          "invalid.deprecated",
          "invalid.illegal",
        ],
        "settings": {
          "foreground": "#b1a400",
          "fontStyle": "bold underline",
        }
      },
      {
        "name": "strings and primitives",
        "scope": [
          "meta.structure.dictionary.json string.quoted.double.json",
          "meta.structure.dictionary.json string.quoted.single.json",
        ],
        "settings": {
          "foreground": "#6fdbb2",
        }
      },
      {
        "name": "sematic: added/inserted",
        "scope": [
          "markup.inserted",
        ],
        "settings": {
          "foreground": "#447152",
        }
      },
      {
        "name": "semantic: deleted/removed",
        "scope": [
          "markup.deleted",
        ],
        "settings": {
          "foreground": "#5b1b1b",
        }
      },
      {
        "name": "semantic: changed/modified",
        "scope": [
          "markup.changed",
        ],
        "settings": {
          "foreground": "#43698d",
        }
      },
    ]

    // TODO: terminal colors

  }
}
