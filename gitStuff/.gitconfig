[alias]
  b = branch -v
  co = checkout
  cnb = checkout -b
  st = status
  rem = remote -v
  cm = commit
  cma = commit -a
  f = fetch
  fa = fetch -a
  unstage = reset HEAD --
  dt = difftool

  ls = log --date=short --pretty=format:"%C(4)%h\\ %C(6)%ad%C(1)%d\\ %Creset%s%C(5)\\ [%an]" --decorate --no-merges
  ll = log --date=short --pretty=format:"%C(4)%h\\ %C(6)%ad%C(1)%d\\ %Creset%s%C(5)\\ [%an]" --decorate --numstat --no-merges
  lsm = log --date=short --pretty=format:"%C(4)%h\\ %C(6)%ad%C(1)%d\\ %Creset%s%C(5)\\ [%an]" --decorate
  llm = log --date=short --pretty=format:"%C(4)%h\\ %C(6)%ad%C(1)%d\\ %Creset%s%C(5)\\ [%an]" --decorate --numstat

[core]
  editor = nvim

[diff]
  tool = default-difftool

[difftool "default-difftool"]
  cmd = code --wait --new-window --diff $LOCAL $REMOTE

[fetch]
  prune = true

[checkout]
  defaultRemote = origin

[color]
  ui = true

[color "branch"]
  current = 15 1
  remote = 15
  local = 1

[color "status"]
  nobranch = 15 1
  branch = 15 1
  added = 2
  changed = 4
  untracked = 3
