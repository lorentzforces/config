#!/usr/bin/env bash
set -u

# very basic banner-making script using figlet

TEXT=${1:-}

RED=$(tput setaf 1)
BOLD=$(tput bold)
RESET=$(tput sgr0)

main() {
	local banner
	# pass the text through echo first to interpret backslash sequences
	banner=$(echo -en "$TEXT" | figlet -f banner | sed 's/#/â–ˆ/g')

	echo -e "$RED$BOLD$banner$RESET"
}
main
