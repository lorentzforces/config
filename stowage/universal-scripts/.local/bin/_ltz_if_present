#!/usr/bin/env bash
set -u

# Basic redirection script to check if the first argument is a command, and simply/silently
# execute it if it's present. If it's not, print a warning (but continue gracefully).

CMD=${1:-}

main() {
	if [[ -z "$CMD" ]]; then
		_ltz_print_error "expected at least one argument to _ltz_if_present"
		exit 1
	fi

	set +e
	type -t "$CMD" &>/dev/null
	local exitval=$?
	set -e
	if [[ $exitval != 0 ]]; then
		_ltz_print_error "$CMD not found, continuing"
		exit 0
	fi

	exec "$@"
}
main "$@"
