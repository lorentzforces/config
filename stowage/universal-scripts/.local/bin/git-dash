#!/usr/bin/env bash
set -u

# show a bunch of probably-relevant git information (like a DASHboard)

GREEN=$(tput setaf 2)
RESET=$(tput sgr0)

main() {
	# very custom alias
	git b
	echo ""

	local status_text
	status_text=$(git -c "color.status=always" status -s)
	if [[ -z "$status_text" ]]; then
		echo "${GREEN} No changes!${RESET}"
	else
		echo "$status_text"
	fi
}
main
