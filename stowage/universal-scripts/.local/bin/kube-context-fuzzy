#!/usr/bin/env bash
set -euo pipefail
IFS=$'\n\t'

# use fzf to fuzzy-find a kubernetes context

INIT_QUERY=${1:-}

main() {
	local target
	target=$(
		kubectl config get-contexts --no-headers \
		| fzf-tmux -h20 -- --no-hscroll --ansi --no-multi -q "$INIT_QUERY" \
		| awk '{print ($1 == "*" ? $2 : $1)}'
	) || return 1

	kubectl config use-context "$target"
}
main
